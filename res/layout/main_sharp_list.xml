<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainSharpList"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/mainSharpListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="false"
        android:background="#111"
        android:gravity="center"
        android:text="Sharp List"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00FF00" />

    <LinearLayout
        android:id="@+id/mainSharpListButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainSharpListTitle"
        android:background="#111" >

        <ImageButton
            android:id="@+id/optimizeMainSharpListButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_sharplist" />
		<!-- 
        <ImageButton
            android:id="@+id/emailShapListButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_action_email" />
		-->
        <ImageButton
            android:id="@+id/emptyMainSharpListButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_action_discard" />

    </LinearLayout>

    <GridView
        android:id="@+id/mainSharpListItemsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="false"
        android:layout_below="@+id/mainSharpListButtons"
        android:background="#111"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"
        android:numColumns="1"
        android:verticalSpacing="5dp" >

    </GridView>

</RelativeLayout>